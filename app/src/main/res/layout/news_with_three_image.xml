<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="222dp">

    <!--    标题-->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="25dp"
        android:text="俄乌战争，是新秩序的诞生还是乱纪元的开端？？"
        android:textColor="@color/common_text_black"
        android:textSize="24sp" />
    <!--    第一张图片-->
    <ImageView
        android:id="@+id/image_1"
        android:layout_width="106dp"
        android:layout_height="106dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="78dp"
        android:src="@drawable/notification_amount_circle" />
    <!--    第二张图片-->
    <ImageView
        android:id="@+id/image_2"
        android:layout_width="106dp"
        android:layout_height="106dp"
        android:layout_marginStart="127dp"
        android:layout_marginTop="78dp"
        android:src="@drawable/notification_amount_circle" />
    <!--    第三张图片-->
    <ImageView
        android:id="@+id/image_3"
        android:layout_width="106dp"
        android:layout_height="106dp"
        android:layout_marginStart="238dp"
        android:layout_marginTop="78dp"
        android:src="@drawable/notification_amount_circle" />
    <!--    &lt;!&ndash;    "热门"标志&ndash;&gt;-->
    <!--    <TextView-->
    <!--        android:id="@+id/hot"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginTop="192dp"-->
    <!--        android:text="热门"-->
    <!--        android:textColor="@color/hot_article"-->
    <!--        android:textSize="15sp" />-->
    <!--    新闻作者-->
    <TextView
        android:id="@+id/author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="192dp"
        android:text="xx新闻"
        android:textColor="@color/text_search_grey"
        android:textSize="15sp" />
    <!--    评论数-->
    <TextView
        android:id="@+id/comments_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="192dp"
        android:layout_toEndOf="@+id/author_name"
        android:text="评论数"
        android:textColor="@color/text_search_grey"
        android:textSize="15sp" />
    <!--    发布时间-->
    <TextView
        android:id="@+id/final_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="192dp"
        android:layout_toEndOf="@+id/comments_count"
        android:text="发布时间"
        android:textColor="@color/text_search_grey"
        android:textSize="15sp" />
</RelativeLayout>